    "url": "https://github.com/alexrosenkranz/lanterns/issues"
  },
  "homepage": "https://github.com/alexrosenkranz/lanterns#readme",
  "dependencies": {
    "bad-words": "^3.0.0",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "if-env": "^1.0.4",
    "mongoose": "^5.4.10",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "passport": "^0.4.0",
    "passport-auth0": "^1.1.0",
    "socket.io": "^2.2.0"
  },
